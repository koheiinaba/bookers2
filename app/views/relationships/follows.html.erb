<p><%= flash[:notice] %></p>

    <div class="col-xs-12">
      <h2>Follow　Users</h2>
      <table class="table table-hover teble-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
          <% @users.each do |user| %>
            <td><%= attachment_image_tag user, :profile_image, size:'50x50', format: 'jpeg', fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <td>フォロー数：<%= user.followings.count %></td>
            <td>フォロワー数：<%= user.followers.count  %></td>
            <td><%= render 'relationships/follow_button', user: user %></td>
            <td><%= link_to "Show", user_path(user) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>