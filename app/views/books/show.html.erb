<p><%= flash[:notice] %></p>

<%= render 'books/list', book: @book, user: @user %>

    <div class="col-xs-9">
      <h2>Book detail</h2>
      <table class="table table-hover teble-inverse">
       <tbody>
        <tr>
          <td><%= link_to user_path(@user) do %>
          <%= attachment_image_tag @user, :profile_image, size:'50x50', format: 'jpeg', fallback: "no_image.jpg" %>
          <% end %>
          <%= link_to @user.name, user_path(@user) %></td>

          <td><%= link_to @books.title, book_path %></td>
          <td><%= @books.body %></td>
          <td>
            <% if @books.favorited_by?(current_user) %>
              <%= link_to book_favorites_path(@books), method: :delete do %>
                <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                <%= @books.favorites.count %>
              <% end %>
            <% else %>
              <%= link_to book_favorites_path(@books), method: :post do %>
                <i class="fa fa-heart-o" aria-hidden="true"></i>
                <%= @books.favorites.count %>
              <% end %>
            <% end %>
          </td>
          <td>コメント数 : <%= @books.book_comments.count %></td>

          <% if @books.user_id == current_user.id %>
          <td><%= link_to "Edit", edit_book_path %></td>
          <td><%= link_to "Destroy", book_path, method: :delete %></td>
          <% end %>
        </tr>
       </tbody>
      </table>
      <table class="table table-hover teble-inverse">
        <thead>
          <tr>
            <th></th>
            <th>name</th>
            <th></th>
            <th>comment</th>
          </tr>
        </thead>
        <tbody>
          <tr>
          <% @books.book_comments.each do |book_comment| %>
            <td></td>
            <td><%= book_comment.user.name %></td>
            <td></td>
            <td><%= book_comment.comment %></td>
            <% if book_comment.user_id == current_user.id %>
            <td><%= link_to "Destroy", book_book_comment_path(@books), method: :delete %></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
      <% if @book_comment.errors.any? %>
        <h3><%= @book_comment.errors.count %>errors prohibited this obj from being saved:</h3>
        <ul>
          <% @book_comment.errors.full_messages.each do |message| %>
          <p><li><%= message %></li></p>
          <% end %>
        </ul>
      <% end %>
      <%= form_for [@books, @book_comment] do |f| %>
        <%= f.text_area :comment %>
        <br>
        <%= f.submit '送信' %>
      <% end %>
    </div>
  </div>
</div>