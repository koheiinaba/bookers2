<p><%= flash[:notice] %></p>

<%= render 'books/list', book: @book, user: @user %>

  <div class="col-xs-9">
    <h2>Books</h2>
      <table class="table table-hover teble-inverse">
        <thead>
          <tr>
            <th></th>
            <th>title</th>
            <th>opinion</th>
          </tr>
        </thead>
        <tbody>
          <tr>
          <% @books.each do |book| %>
            <td><%= link_to user_path(@user) do %>
            <%= attachment_image_tag @user, :profile_image, size: '50x50', format: 'jpeg', fallback: "no_image.jpg" %></td>
            <% end %>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>